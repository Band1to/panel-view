{
  "name": "Messenger for WhatsAppâ„¢",
  "short_name": "iwweb",
  "description": "Access to WhatsApp official Web UI in a browser popup",
  "author": "Morni Colhkher",
  "version": "0.2.0",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "*://web.whatsapp.com/*"
  ],
  "web_accessible_resources": [],
  "browser_action": {
    "default_icon": {
      "19": "data/icons/19.png",
      "38": "data/icons/38.png"
    },
    "default_popup": "data/popup/index.html"
  },
  "background": {
    "scripts": [
      "common.js"
    ]
  },
  "content_scripts": [{
    "matches": ["*://web.whatsapp.com/*"],
    "js": ["data/inject/inject.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  "homepage_url": "http://add0n.com/whatsapp-messenger.html",
  "icons": {
    "16": "data/icons/16.png",
    "48": "data/icons/48.png",
    "128": "data/icons/128.png"
  },
  "applications": {
    "gecko": {
      "id": "rt42fsdty645jIidD@jetpack",
      "strict_min_version": "55.0"
    }
  }
}
